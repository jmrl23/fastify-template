    "@fastify/swagger-ui": "^5.2.3",
    "detect-port": "^2.1.0",
    "env-var": "^7.5.0",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "glob": "^11.0.3",
    "http-errors": "^2.0.0",
    "pino-pretty": "^13.1.2",
