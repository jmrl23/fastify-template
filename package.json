{
  "version": "1.0.0",
  "name": "fastify-template",
  "repository": "https://github.com/jmrl23/fastify-template",
  "author": "Jomariel Gaitera <gaiterajomariel@gmail.com>",
  "license": "MIT",
  "main": "./build/main.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json && tsc-alias -p ./tsconfig.json",
    "test": "jest",
    "start": "node ./build/main.js",
    "start:dev": "tsx watch --include \"./package.json\" ./src/main.ts -- --inspect=9229",
    "start:prod": "dotenvx run --env NODE_ENV=production --ignore=MISSING_ENV_FILE -- node ./build/main.js",
    "format": "prettier --write \"./src/**/*.{ts,js}\"",
    "lint": "eslint"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/etag": "^6.1.0",
    "@fastify/static": "^8.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "detect-port": "^2.1.0",
    "env-var": "^7.5.0",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "glob": "^13.0.0",
    "http-errors": "^2.0.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@jest/types": "^30.2.0",
    "@swc/core": "^1.15.10",
    "@swc/jest": "^0.2.39",
    "@tsconfig/node-lts": "^24.0.0",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.4",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  }
}
